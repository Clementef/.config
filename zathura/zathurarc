set statusbar-h-padding 5
set statusbar-v-padding 5
set window-title-basename true
set statusbar-basename true
set statusbar-page-percent true
set page-padding 1
set guioptions none
set selection-clipboard clipboard

map [fullscreen] <Esc> toggle_fullscreen
map ; focus_inputbar :
map = zoom in
map - zoom out
map + zoom best-fit
map i recolor
map I recolor
map p print
map R reload
map r reload
map d scroll half-down
map u scroll half-up
map D toggle_page_mode
map b toggle_statusbar
map B toggle_statusbar
map f toggle_fullscreen
map F toggle_fullscreen
map Q quit

map [fullscreen] ; focus_inputbar :
