# helper functions
fact = function(x) { factorial(x) }
ln = function(x) { log(x) }
e = exp(1)
tau = 2*pi
quit = function() { q(save = "no") }

# init message
v = R.version
v_min = paste0("R ",v$major,".",v$minor,
                  " (",v$year,"-",v$month,
                  "-",v$day,")")
message = paste0(v_min,"\n",
                  v$platform)
cat(message,"\n\n")

